{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "extends": [
    "angular-tslint-rules",
    "rxjs-tslint-rules"
  ],
  "rules": {
    "curly": true,
    "deprecation": {
      "severity": "warning"
    },
    "import-blacklist": [
      true,
      "rxjs/Rx"
    ],
    "indent": [
      true,
      "spaces",
      4
    ],
    "label-position": true,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-empty": false,
    "no-empty-interface": false,
    "no-implicit-dependencies": [true, ["~app", "~abp", "~shared"]],
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-input-rename": false,
    "no-namespace": false,
    "no-null-keyword": false,
    "no-unnecessary-class": false,
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration"
    ],
    "component-selector": false,
    "directive-selector": false,
    "pipe-naming": false,
    "prefer-inline-decorator": false,
    "newline-per-chained-call": false,
    "i18n": false,
    "only-arrow-functions": false,
    "rxjs-no-operator": { "severity": "error" },
    "rxjs-no-subject-value": { "severity": "error" },
    "rxjs-no-subject-unsubscribe": { "severity": "error" },
    "rxjs-no-nested-subscribe": { "severity": "error" },
    "rxjs-no-ignored-subscribe": { "severity": "error" },
    "rxjs-no-internal": { "severity": "error" },
    "rxjs-no-exposed-subjects": { "severity": "error" },
    "rxjs-ban-observables": { "severity": "error" },
    "rxjs-ban-operators": { "severity": "error" },
    "rxjs-no-unsafe-catch": { "severity": "error" },
    "rxjs-no-create": true,
    "rxjs-finnish": { "severity": "warning" }
  }
}
